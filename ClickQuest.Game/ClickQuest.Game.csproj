<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>WinExe</OutputType>
		<TargetFramework>net5.0-windows</TargetFramework>
		<UseWPF>true</UseWPF>
		<ApplicationIcon>Resources\Images\GameIcon.ico</ApplicationIcon>
	</PropertyGroup>

	<PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
		<NoWarn>0067;1701;1702</NoWarn>
	</PropertyGroup>

	<ItemGroup>
	  <None Remove="Resources\Fonts\Courgette-Regular.ttf" />
	  <None Remove="Resources\Fonts\Lato-Regular.ttf" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="ControlzEx" Version="5.0.1" />
		<PackageReference Include="MaterialDesignExtensions" Version="3.3.0" />
		<PackageReference Include="MaterialDesignThemes" Version="4.2.1" />
		<PackageReference Include="PropertyChanged.Fody" Version="3.4.0" />
	</ItemGroup>

	<ItemGroup>
		<None Update="Core\GameData\GameAssets\Artifacts.json">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>
		<None Update="Core\GameData\GameAssets\Materials.json">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>
		<None Update="Core\GameData\GameAssets\Monsters.json">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>
		<None Update="Core\GameData\GameAssets\PriestOffer.json">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>
		<None Update="Core\GameData\GameAssets\Recipes.json">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>
		<None Update="Core\GameData\GameAssets\Regions.json">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>
		<None Update="Core\GameData\GameAssets\ShopOffer.json">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>
		<None Update="Core\GameData\GameAssets\Blessings.json">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>
		<None Update="Core\GameData\GameAssets\Quests.json">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>
		<None Update="Core\GameData\GameAssets\Bosses.json">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>
		<None Update="Core\GameData\GameAssets\Dungeons.json">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>
		<None Update="Core\GameData\GameAssets\DungeonGroups.json">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>
		<None Update="Core\GameData\GameAssets\DungeonKeys.json">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>
		<None Update="Core\GameData\GameAssets\Ingots.json">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>
	</ItemGroup>

	<ItemGroup>
		<Folder Include="Logs" />
	</ItemGroup>

	<ItemGroup>
		<Resource Include="Resources\Fonts\Courgette-Regular.ttf" />
		<Resource Include="Resources\Fonts\Lato-Regular.ttf" />
		<Resource Include="Resources\Images\logo.png" />
		<Resource Include="Resources\Images\GameIcon.png" />
		<Resource Include="Resources\Images\GameIcon.ico" />
	</ItemGroup>
</Project>