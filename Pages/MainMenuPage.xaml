<Page x:Class="ClickQuest.Pages.MainMenuPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClickQuest"
        mc:Ignorable="d" Title="Main Menu"
        Height="768" Width="1024">
  <Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>

		<StackPanel x:Name="HeroesPanel" Orientation="Vertical" Grid.Column="0" VerticalAlignment="Center">
		</StackPanel>

            <StackPanel x:Name="ActionsPanel" Orientation="Vertical" Grid.Column="1" VerticalAlignment="Center">
		      <Button x:Name="CreateHeroButton"  Width="250" Height="50" Margin="5" Content="Create a new hero!" Click="CreateHeroButton_Click"/>
                  <Button x:Name="ResetProgressButton"  Width="250" Height="50" Margin="5" Content="Reset all your progress" Click="ResetProgressButton_Click"/>
            </StackPanel>
	</Grid>
</Page>