<Window x:Class="ClickQuest.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClickQuest"
        mc:Ignorable="d"
        Title="GameWindow" Height="768" Width="1366"
        ResizeMode="NoResize" WindowStyle="None">

    <StackPanel>
        <Grid>
            <Rectangle x:Name="DragableTop" Height="25" Fill="White" MouseDown="DragableTop_MouseDown"/>

            <Button x:Name="ExitButton" Width="45" Height="25" VerticalAlignment="Top" HorizontalAlignment="Right" Content="Exit" Click="ExitButton_Click"/>
        </Grid>

        <Frame x:Name="CurrentFrame" NavigationUIVisibility="Hidden"/> 
    </StackPanel>
</Window>
