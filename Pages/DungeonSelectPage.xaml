<Page x:Class="ClickQuest.Pages.DungeonSelectPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClickQuest"
        mc:Ignorable="d" Title="Dungeon Select"
        Height="728" Width="1366">
        

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Frame x:Name="CurrentFrame" Grid.Column="0" Source="/Pages/HeroStatsPage.xaml" NavigationUIVisibility="Hidden" HorizontalAlignment="Left" Width="341"/>
        
        <Frame x:Name="EquipmentFrame" Grid.Column="2" Source="/Pages/EquipmentPage.xaml" NavigationUIVisibility="Hidden" HorizontalAlignment="Left" Width="341"/>

        <StackPanel Grid.Column="1">
            <StackPanel x:Name="NavigationPanel" Orientation="Vertical">
                <Button x:Name="TownButton" Width="150" Height="50" Content="Come back to town!" Click="TownButton_Click" />
                <Button x:Name="UndoButton" Width="150" Height="50" Content="Undo" Visibility="Hidden"/>
            </StackPanel>
            <StackPanel x:Name="DungeonSelectPanel" Orientation="Vertical">
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>