<Page x:Class="ClickQuest.Pages.TownPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClickQuest"
        mc:Ignorable="d" Title="Town"
        Height="768" Width="1024">
    <Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>

        <Frame x:Name="CurrentFrame" Grid.Column="0" Source="/Pages/HeroStatsPage.xaml" NavigationUIVisibility="Hidden"/>


		<StackPanel x:Name="RegionsPanel" Orientation="Vertical" Grid.Column="1">
            <Button x:Name="MainMenuButton" Content="Back to menu" Click="MainMenuButton_Click" Width="100" Height="50"/>
            <Button x:Name="QuestMenuButton" Content="Quests" Click="QuestMenuButton_Click" Width="100" Height="50"/>
            <Button x:Name="ShopButton" Content="Shop" Click="ShopButton_Click" Width="150" Height="50"/>
            <Button x:Name="BlacksmithButton" Content="Blacksmith" Click="BlacksmithButton_Click" Width="150" Height="50"/>
            <Button x:Name="PriestButton" Content="Priest" Click="PriestButton_Click" Width="150" Height="50"/>
		</StackPanel>

		
	</Grid>
</Page>