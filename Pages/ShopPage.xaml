<Page x:Class="ClickQuest.Pages.ShopPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClickQuest"
        mc:Ignorable="d"
        Title="Shop Page" Height="450" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button x:Name="TownButton" Grid.Row="0" Width="50" Height="50" Content="Come back to town!" Click="TownButton_Click"/>
        <TabControl Grid.Row="1">
                <TabItem Header="Sell">
                    <ListView x:Name="ItemsListViewSell" Margin="10">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Name" Width="120" DisplayMemberBinding="{Binding Name}" />
                                <GridViewColumn Header="Quantity" Width="150" DisplayMemberBinding="{Binding Quantity}"/>
                                <GridViewColumn Header="Rarity" Width="50" DisplayMemberBinding="{Binding RarityString}" />
                                <GridViewColumn Header="Value" Width="150" DisplayMemberBinding="{Binding Value}" />
                                <GridViewColumn Header="Sell" Width="200">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="Sell" Click="SellButton_Click" CommandParameter="{Binding}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </TabItem>
                <TabItem Header="Buy" >
                    <ListView x:Name="ItemsListViewBuy" Margin="10">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Name" Width="120" DisplayMemberBinding="{Binding Name}" />
                                <GridViewColumn Header="Quantity" Width="150" DisplayMemberBinding="{Binding Quantity}"/>
                                <GridViewColumn Header="Rarity" Width="50" DisplayMemberBinding="{Binding RarityString}" />
                                <GridViewColumn Header="Value" Width="150" DisplayMemberBinding="{Binding Value}" />
                                <GridViewColumn Header="Buy" Width="200">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="Buy" Click="BuyButton_Click" CommandParameter="{Binding}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </TabItem>
        </TabControl>
    </Grid>
</Page>