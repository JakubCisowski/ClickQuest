<Page x:Class="ClickQuest.Pages.HeroCreationPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClickQuest"
        mc:Ignorable="d"
        Title="HeroCreationPage" Height="600" Width="600">

       <StackPanel Orientation="Vertical">
            <TextBlock Text="Hero name:"/>
            <TextBox x:Name="HeroNameBox" Margin="30"/>

            <TextBlock Text="Class:"/>
            <ComboBox x:Name="HeroClassBox" Margin="30"/>
            
            <Button x:Name="CreateHeroButton" Click="CreateHeroButton_Click" Content="Create!" Margin="30"/>
            <Button x:Name="CancelButton" Click="CancelButton_Click" Content="Back to menu"/>
       </StackPanel>
</Page>