<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<ResourceDictionary.MergedDictionaries>
		<ResourceDictionary Source="/UserInterface/Controls/Styles/Colors.xaml" />
	</ResourceDictionary.MergedDictionaries>

	<!-- Custom button styles -->
	<Style x:Key="ButtonStyleGeneral" TargetType="Button">
		<Setter Property="OverridesDefaultStyle" Value="True" />
		<Setter Property="Margin" Value="5" />
		<Setter Property="FontSize" Value="16" />
		<Setter Property="FontFamily" Value="/Resources/Fonts/#GothamBook" />
		<Setter Property="Background" Value="{StaticResource BrushGame2}" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="Button">
					<Border Name="border"
					        BorderThickness="1"
					        Padding="4,2"
					        BorderBrush="{StaticResource BrushLightGray}"
					        CornerRadius="3"
					        Background="{TemplateBinding Background}">
						<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
					</Border>
					<ControlTemplate.Triggers>
						<Trigger Property="IsMouseOver" Value="True">

							<Trigger.EnterActions>
								<BeginStoryboard HandoffBehavior="SnapshotAndReplace">
									<Storyboard>
										<ColorAnimation To="{StaticResource ColorBlack}" Duration="0:0:0.2" Storyboard.TargetName="border"
										                Storyboard.TargetProperty="BorderBrush.Color" />
									</Storyboard>
								</BeginStoryboard>
							</Trigger.EnterActions>

							<Trigger.ExitActions>
								<BeginStoryboard HandoffBehavior="SnapshotAndReplace">
									<Storyboard>
										<ColorAnimation To="{StaticResource ColorDarkGray}" Duration="0:0:0.2" Storyboard.TargetName="border"
										                Storyboard.TargetProperty="BorderBrush.Color" />
									</Storyboard>
								</BeginStoryboard>
							</Trigger.ExitActions>

						</Trigger>
					</ControlTemplate.Triggers>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<Style x:Key="ButtonStyleDisabled" TargetType="Button">
		<Setter Property="OverridesDefaultStyle" Value="True" />
		<Setter Property="Margin" Value="5" />
		<Setter Property="FontSize" Value="16" />
		<Setter Property="FontFamily" Value="/Resources/Fonts/#GothamBook" />
		<Setter Property="Background" Value="{StaticResource BrushLightGray}" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="Button">
					<Border Name="border"
					        BorderThickness="1"
					        Padding="4,2"
					        BorderBrush="{StaticResource BrushLightGray}"
					        CornerRadius="3"
					        Background="{TemplateBinding Background}">
						<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
					</Border>
					<ControlTemplate.Triggers>
						<Trigger Property="IsMouseOver" Value="True">

							<Trigger.EnterActions>
								<BeginStoryboard HandoffBehavior="SnapshotAndReplace">
									<Storyboard>
										<ColorAnimation To="{StaticResource ColorBlack}" Duration="0:0:0.2" Storyboard.TargetName="border"
										                Storyboard.TargetProperty="BorderBrush.Color" />
									</Storyboard>
								</BeginStoryboard>
							</Trigger.EnterActions>

							<Trigger.ExitActions>
								<BeginStoryboard HandoffBehavior="SnapshotAndReplace">
									<Storyboard>
										<ColorAnimation To="{StaticResource ColorDarkGray}" Duration="0:0:0.2" Storyboard.TargetName="border"
										                Storyboard.TargetProperty="BorderBrush.Color" />
									</Storyboard>
								</BeginStoryboard>
							</Trigger.ExitActions>

						</Trigger>
					</ControlTemplate.Triggers>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<Style x:Key="ButtonStyleDanger" TargetType="Button">
		<Setter Property="OverridesDefaultStyle" Value="True" />
		<Setter Property="Margin" Value="5" />
		<Setter Property="FontSize" Value="16" />
		<Setter Property="FontFamily" Value="/Resources/Fonts/#GothamBook" />
		<Setter Property="Background" Value="{StaticResource BrushLightGray}" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="Button">
					<Border Name="border"
					        BorderThickness="2"
					        Padding="4,2"
					        BorderBrush="{StaticResource BrushPink}"
					        CornerRadius="3"
					        Background="{TemplateBinding Background}">
						<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
					</Border>
					<ControlTemplate.Triggers>
						<Trigger Property="IsMouseOver" Value="True">
							<Setter TargetName="border" Property="BorderBrush" Value="{StaticResource BrushRed}" />

							<Trigger.EnterActions>
								<BeginStoryboard HandoffBehavior="SnapshotAndReplace">
									<Storyboard>
										<ColorAnimation To="{StaticResource ColorRed}" Duration="0:0:0.2" Storyboard.TargetName="border"
										                Storyboard.TargetProperty="BorderBrush.Color" />
									</Storyboard>
								</BeginStoryboard>
							</Trigger.EnterActions>

							<Trigger.ExitActions>
								<BeginStoryboard HandoffBehavior="SnapshotAndReplace">
									<Storyboard>
										<ColorAnimation To="{StaticResource ColorPink}" Duration="0:0:0.2" Storyboard.TargetName="border"
										                Storyboard.TargetProperty="BorderBrush.Color" />
									</Storyboard>
								</BeginStoryboard>
							</Trigger.ExitActions>

						</Trigger>
					</ControlTemplate.Triggers>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>