<Application x:Class="ClickQuest.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ClickQuest"
             StartupUri="/Windows/GameWindow.xaml"
             Startup="Application_Startup"
			 ShutdownMode="OnMainWindowClose"
             >
    <Application.Resources>
        <Style x:Key="CustomFont" TargetType="FrameworkElement">
            <Setter Property="TextElement.FontFamily" Value="/Resources/Fonts/#Hero"/>
        </Style>

        <Style TargetType="Button" BasedOn="{StaticResource CustomFont}"></Style>
        <Style TargetType="TextBlock" BasedOn="{StaticResource CustomFont}"></Style>
        <Style TargetType="ListView" BasedOn="{StaticResource CustomFont}"></Style>

    </Application.Resources>
</Application>