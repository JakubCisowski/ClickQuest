<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<ResourceDictionary.MergedDictionaries>
		<ResourceDictionary Source="/UserInterface/Controls/Styles/Colors.xaml" />
		<ResourceDictionary Source="/UserInterface/Controls/Styles/Fonts.xaml" />
	</ResourceDictionary.MergedDictionaries>

	<!-- Custom button styles -->
	<Style x:Key="ButtonStyleGeneral" TargetType="Button">
		<Setter Property="OverridesDefaultStyle" Value="True" />
		<Setter Property="Margin" Value="5" />
		<Setter Property="FontSize" Value="16" />
		<Setter Property="FontFamily" Value="{StaticResource FontRegular}" />
		<Setter Property="Background" Value="{StaticResource BrushAccent3}" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="Button">
					<Border Name="border"
					        BorderThickness="1"
					        Padding="4,2"
					        BorderBrush="{StaticResource BrushGray2}"
					        CornerRadius="3"
					        Background="{TemplateBinding Background}">
						<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
					</Border>
					<ControlTemplate.Triggers>
						<Trigger Property="IsMouseOver" Value="True">

							<Trigger.EnterActions>
								<BeginStoryboard HandoffBehavior="SnapshotAndReplace">
									<Storyboard>
										<ColorAnimation To="{StaticResource ColorBlack}" Duration="0:0:0.2" Storyboard.TargetName="border"
										                Storyboard.TargetProperty="BorderBrush.Color" />
									</Storyboard>
								</BeginStoryboard>
							</Trigger.EnterActions>

							<Trigger.ExitActions>
								<BeginStoryboard HandoffBehavior="SnapshotAndReplace">
									<Storyboard>
										<ColorAnimation To="{StaticResource ColorGray5}" Duration="0:0:0.2" Storyboard.TargetName="border"
										                Storyboard.TargetProperty="BorderBrush.Color" />
									</Storyboard>
								</BeginStoryboard>
							</Trigger.ExitActions>

						</Trigger>
					</ControlTemplate.Triggers>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

